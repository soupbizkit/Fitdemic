<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PadecimientosActivity"
    android:background="@color/colorSecondaryDark">

    <TextView
        android:id="@+id/tvTitulo1"
        android:layout_width="207dp"
        android:layout_height="53dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/futurabold"
        android:text="@string/titulo1"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitulo2"
        android:layout_width="202dp"
        android:layout_height="54dp"
        android:fontFamily="@font/futurabold"
        android:text="@string/titulo2"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo1" />

    <TextView
        android:id="@+id/tvNombrePadecimientos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ralewayextrabold"
        android:hint="@string/nombreHint"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorSecondaryLight"
        android:textColorHint="@color/colorSecondaryLight"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="307dp"
        android:layout_height="279dp"
        android:layout_marginTop="28dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNombrePadecimientos">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/ralewayregular"
                android:gravity="center"
                android:text="@string/padecimientos"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </androidx.appcompat.widget.Toolbar>

        <CheckBox
            android:id="@+id/cbArtritis"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:fontFamily="@font/ralewaysemibold"
            android:text="@string/artritisPadecimientos"
            android:textColor="@color/blueDark"
            android:textSize="22sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbDiabetes"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:fontFamily="@font/ralewaysemibold"
            android:text="@string/diabetesPadecimientos"
            android:textColor="@color/blueDark"
            android:textSize="22sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbSobrepeso"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:fontFamily="@font/ralewaysemibold"
            android:text="@string/sobrepesoPadecimientos"
            android:textColor="@color/blueDark"
            android:textSize="22sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbOsteoporosis"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:fontFamily="@font/ralewaysemibold"
            android:text="@string/osteoporosisPadecimientos"
            android:textColor="@color/blueDark"
            android:textSize="22sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/cbLesiones"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:fontFamily="@font/ralewaysemibold"
            android:text="@string/lesionesPadecimientos"
            android:textColor="@color/blueDark"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/bSiguiente"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/futuramedium"
        android:onClick="onClickPadecimientos"
        android:text="@string/botonSiguiente"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>